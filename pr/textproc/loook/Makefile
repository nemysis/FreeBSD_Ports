# Created by: Rusmir Dusko <nemysis@FreeBSD.org>
# $FreeBSD$

PORTNAME=	loook
PORTVERSION=	0.6.5
CATEGORIES=	textproc
MASTER_SITES=	http://www.danielnaber.de/loook/
PKGNAMEPREFIX=	${PYTHON_PKGNAMEPREFIX}
DISTNAME=	${PORTNAME}
DIST_SUBDIR=	python

MAINTAINER=	nemysis@FreeBSD.org
COMMENT=	Simple Python tool that search in OpenOffice files

LICENSE=	GPLv2

RUN_DEPENDS=	${PYTHON_PKGNAMEPREFIX}tkinter>=0:${PORTSDIR}/x11-toolkits/py-tkinter \
		${PYTHON_PKGNAMEPREFIX}iniparse>=0:${PORTSDIR}/devel/py-iniparse

WRKSRC=		${WRKDIR}

USE_ZIP=	yes
USE_PYTHON=	2.7
NO_BUILD=	yes
CONFLICTS=	loook-devel-[0-9]*

PLIST_FILES=	bin/${PORTNAME}

post-patch:
	@${REINPLACE_CMD} -e 's,/usr/bin/python,${PYTHON_CMD},' \
		${WRKSRC}/${PORTNAME}.py
	@(cd ${WRKSRC} ; ${RM} *.py.bak)

do-install:
	${INSTALL_SCRIPT} ${WRKSRC}/${PORTNAME}.py ${PREFIX}/bin/${PORTNAME}

.include <bsd.port.mk>
